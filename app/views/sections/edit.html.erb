<h1>Update <%= @section.name %></h1>

<% if @section.errors.any? %>
  <h3>Please fix these errors:</h3>
  <ul>
    <% @section.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<form action"/sections/<%= @section.id %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="section_name">Section</label>
  <input id="section_name" name="update_section[name]" type="text" value="<%= @section.name %>">
  <label for="section_number">Section Number</label>
  <input id="section_number" name="update_section[number]" type="text" value="<%= @section.number %>">
  <button>Update</button>
</form>

<form action="/sections/<%= @section.id %>" method="get">
  <button>Return</button>
</form>
