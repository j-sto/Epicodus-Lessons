<h1>Update <%= @lesson.name %></h1>
<p><%= @lesson.content %></p>

<% if @lesson.errors.any? %>
  <h3>Please fix these errors:</h3>
  <ul>
    <% @lesson.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<form action"/lessons/<%= @lesson.id %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="lesson_name">Lesson</label>
  <input id="lesson_name" name="update_lesson[name]" type="text" value="<%= @lesson.name %>">
  <label for="lesson_content">Content</label>
  <input id="lesson_content" name="update_lesson[content]" type="text" value="<%= @lesson.content %>">
  <label for="lesson_number">Lesson Number</label>
  <input id="lesson_number" name="update_lesson[number]" type="text" value="<%= @lesson.number %>">

  <select name="update_lesson[section_id]">
    <% @sections.each do |section| %>
      <option value="<%= section.id %>" ><%= section.name %></option>
    <% end %>
  </select>

  <button>Update</button>
</form>


<form action="/lessons/<%= @lesson.id %>" method="get">
  <button>Return</button>
</form>
