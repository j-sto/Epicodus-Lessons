<h1>Lessons</h1>

<ul>
  <% reordered_lessons = @lessons.sort_by { |hsh| hsh[:number] } %>
  <% reordered_lessons.each do |lesson| %>
    <li> <a href="/lessons/<%= lesson.id %>"> <%= lesson.name %> </a></li>
  <% end %>
</ul>

<form action="/lessons/new" method="get">
  <button>Create new lesson</button>
</form>




